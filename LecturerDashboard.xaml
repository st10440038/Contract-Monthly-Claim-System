<Page x:Class="cmcsPOE.LecturerDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:cmcsPOE"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LecturerDashboard">

    <StackPanel Margin="20" Background="Gray">
        <TextBlock Text="Lecturer Dashboard" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>
        <Button Content="Submit New Claim" Width="200" Height="40" Background="#2563EB" Foreground="White" Margin="0,0,0,10"/>
        <Button Content="Upload Supporting Documents" Width="250" Height="40" Background="#2563EB" Foreground="White" Margin="0,0,0,10"/>

        <TextBlock Text="My Claims" FontSize="18" Margin="0,20,0,10"/>
        <DataGrid AutoGenerateColumns="False" Height="300">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Claim ID" Binding="{Binding ClaimId}"/>
                <DataGridTextColumn Header="Month" Binding="{Binding Month}"/>
                <DataGridTextColumn Header="Hours" Binding="{Binding Hours}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>

</Page>
