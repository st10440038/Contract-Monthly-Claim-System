<Page x:Class="POEcmcs.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:POEcmcs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid Margin="20" Background="LightGray">
        <!-- Header -->
        <TextBlock Text="Lecturer Dashboard" FontSize="28" FontWeight="Bold" Foreground="#1E3A8A" HorizontalAlignment="Center"/>

        <!-- Buttons for actions -->
        <StackPanel VerticalAlignment="Top" Margin="0,90,0,0" HorizontalAlignment="Center" Width="450">
            <Button Content="Submit Claim" Height="55" Background="#1E40AF" Foreground="White" FontSize="16" />
            <Button Content="Upload Supporting Documents" Height="55" Background="#2563EB" Foreground="White" FontSize="16" />
            <Button Content="Track Claim Status" Height="55" Background="#3B82F6" Foreground="White" FontSize="16" />
        </StackPanel>

    </Grid>
</Page>
