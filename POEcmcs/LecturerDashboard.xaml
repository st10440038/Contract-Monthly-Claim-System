<Page x:Class="POEcmcs.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:POEcmcs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid Background="White">
        <StackPanel Margin="20">
            <!-- Page Title -->
            <TextBlock Text="Lecturer Dashboard" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#3A5BA0" 
                       Margin="0,0,0,20"/>

            <!-- Dashed border area for claim actions -->
            <Grid Margin="0,0,0,20">
                <!-- Dashed rectangle -->
                <Rectangle Stroke="Gray" StrokeThickness="2" StrokeDashArray="4 2" RadiusX="10" RadiusY="10"/>

                <!-- Content inside the dashed box -->
                <StackPanel Margin="15">
                    <Button Content="Submit Claim" 
                            Width="200" Height="40" Margin="0,0,0,10" 
                            Background="#3A5BA0" Foreground="White"/>

                    <Button Content="Upload Documents" 
                            Width="200" Height="40" Margin="0,0,0,10" 
                            Background="#3A5BA0" Foreground="White"/>

                    <Button Content="Track Claim Status" 
                            Width="200" Height="40" 
                            Background="#3A5BA0" Foreground="White"/>
                </StackPanel>
            </Grid>

            <!-- Extra info or tips area -->
            <TextBlock Text="Tip: You can always track your submitted claims under 'Claim Status'." 
                       FontStyle="Italic" Foreground="Gray"/>
        </StackPanel>
    </Grid>
</Page>
