<Window x:Class="POEcmcs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POEcmcs"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid Background="#F5F5F5">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <TextBlock Text="Contract Monthly Claim System" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="#2563EB" TextAlignment="Center" Margin="0,0,0,30"/>

            <TextBlock Text="Login As:" FontSize="18" FontWeight="SemiBold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Lecturer Login Button -->
            <Button Content="Lecturer" Width="200" Height="50" 
                    Background="#2563EB" Foreground="White" FontSize="16" 
                    Margin="0,0,0,15"/>

            <!-- Manager Login Button -->
            <Button Content="Programme Coordinator / Academic Manager" 
                    Width="300" Height="50" 
                    Background="#16A34A" Foreground="White" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>
