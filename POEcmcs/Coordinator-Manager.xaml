<Page x:Class="POEcmcs.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:POEcmcs"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="Page1" Height="505">

    <Grid Margin="20" Background="LightGray">
        <!-- Title -->
        <TextBlock Text="Claims Verification and Approval"
                   FontSize="24" FontWeight="Bold"
                   Foreground="#1E3A8A"
                   HorizontalAlignment="Center"
                   Margin="0,31,0,0" Height="434" VerticalAlignment="Top"/>

        <!-- DataGrid -->
        <DataGrid Name="ClaimsGrid"
                  Margin="32,78,31,97"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  HeadersVisibility="Column"
                  RowHeight="40"
                  IsReadOnly="True"
                  Background="White"
                  BorderBrush="#2563EB"
                  BorderThickness="1"
                  AlternatingRowBackground="#F0F4FF">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Class Taught" Binding="{Binding ClassTaught}" Width="*"/>
                <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount}" Width="*"/>
                <DataGridTextColumn Header="Hours Worked" Binding="{Binding HoursWorked}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>

                <!-- Supporting Documents Column -->
                <DataGridTemplateColumn Header="Supporting Documents" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Download"
                                    Width="100" Height="30"
                                    Background="#2563EB" Foreground="White"
                                    FontWeight="Bold"
                                    HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action buttons under the DataGrid -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,386,0,19">
            <Button Content="Accept" Width="100" Height="30" Margin="5" Background="Green" Foreground="White"/>
            <Button Content="Reject" Width="100" Height="30" Margin="5" Background="Red" Foreground="White"/>
            <Button Content="Back" Width="100" Height="30" Margin="5" Background="#1E3A8A" Foreground="White"/>
        </StackPanel>
    </Grid>
</Page>
